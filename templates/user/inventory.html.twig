    <script>

        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag2(ev) {
            ev.dataTransfer.setData("image", ev.target.id);
        }

        function drop2(ev) {
            ev.preventDefault();
            let data = ev.dataTransfer.getData("image");
            ev.target.appendChild(document.getElementById(data));
        }
        function drag(ev) {
            ev.dataTransfer.setData("image",ev.target.id+"|"+ev.target.parentNode.id);
        }

        function drop(ev) {
            let dropData = ev.dataTransfer.getData("image");
            let dropItems = dropData.split("|");
            let prevElem = document.getElementById(dropItems[1]);
            prevElem.getElementsByTagName("div")[0].id = ev.target.id;
            ev.target.appendChild(document.getElementById(dropItems[0]));
            ev.preventDefault();
        }
    </script>
